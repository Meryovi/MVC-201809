@model List<VentasMvc.Modelos.Factura>

@{
    ViewBag.Title = "Lista de Facturas";
}

<h2>Lista de Facturas</h2>

<hr />

<a href="/Facturas/Create" class="btn btn-primary">
    Crear factura
</a>

<hr />

<table class="table table-striped">
    <thead>
        <tr>
            <th>N&uacute;mero</th>
            <th>Registro</th>
            <th>Cliente</th>
            <th>Monto Total</th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var factura in Model)
        {
            <tr>
                <td>@factura.Id</td>
                <td>@factura.FechaRegistro.ToString("dd/MM/yyyy hh:mm tt")</td>
                <td>@factura.Cliente.Nombre</td>
                <td>@factura.MontoTotal.ToString("N2")</td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = factura.Id })
                    /
                    @Html.ActionLink("Detalle", "Details", new { id = factura.Id })
                    /
                    @Html.ActionLink("Eliminar", "Delete", new { id = factura.Id })
                </td>
            </tr>
        }

    </tbody>
</table>

