@model IEnumerable<VentasMvc.Modelos.Cliente>

@{
    ViewBag.Title = "Lista de Clientes";
}

<h2>Lista de Clientes</h2>

<hr />

<p>
    @Html.ActionLink("Registrar", "Create", null, new { @class = "btn btn-primary" })
</p>

<hr />

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                Identificaci&oacute;n
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                Tel&eacute;fono
            </th>
            <th>
                Direcci&oacute;n
            </th>
            <th>
                Registro
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Identificacion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefono)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Direccion)
                </td>
                <td>
                    @item.FechaRegistro.ToString("dd/MM/yyyy")
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id })
                    /
                    @Html.ActionLink("Detalle", "Details", new { id = item.Id })
                    /
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
